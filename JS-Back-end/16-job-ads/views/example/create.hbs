<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if errors}}
    <div>
        {{#each errors}}
        <div class="errorContainer">
            <p>{{this}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <section id="create-container">
        <div class="create-container-info">
            <h1>Create Announcement</h1>
            <h4>Post your coins to sell</h4>
            <form action="/catalog/create" method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{crypto.name}}" placeholder="Bitcoin">
                <label>Image:</label>
                <input type="text" id="image" name="imageUrl" value="{{crypto.imageUrl}}" placeholder="http://...">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{crypto.price}}" placeholder="31,166.71">
                <label>Description:</label>
                <textarea id="description" name="description" placeholder="Introduce your coins...">{{crypto.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="payment" >                  
                    <option value="crypto-wallet" {{#if crypto.paymentCryptoWallet}}selected{{/if}}>Crypto Wallet</option>
                    <option value="credit-card" {{#if crypto.paymentCreditCard}}selected{{/if}}>Credit Card</option>
                    <option value="debit-card" {{#if crypto.paymentDebitCard}}selected{{/if}}>Debit Card</option>
                    <option value="paypal" {{#if crypto.paymentPaypal}}selected{{/if}}>PayPal</option>                    
                </select>
                <input type="submit" id="btn" value="TRADE"></input>
            </form>
        </div>
    </section>
</main>