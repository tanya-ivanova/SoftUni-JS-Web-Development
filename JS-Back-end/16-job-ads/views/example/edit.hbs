<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if errors}}
    <div>
        {{#each errors}}
        <div class="errorContainer">
            <p>{{this}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <section id="edit-container">
        <div class="edit-container-info">
            <h1>Edit Announcement</h1>
            <form action="/catalog/{{crypto._id}}/edit" method="post">
                <label>Name:</label>
                <input type="text" id="name" name="name" value="{{crypto.name}}">
                <label>Image:</label>
                <input type="text" id="image" name="imageUrl" value="{{crypto.imageUrl}}">
                <label>Price:</label>
                <input type="number" id="price" name="price" value="{{crypto.price}}">
                <label>Description:</label>
                <textarea name="description"
                    id="description">{{crypto.description}}</textarea>
                <label>Payment method:</label>
                <select id="payment" name="payment">
                    <option value="crypto-wallet" {{#if crypto.paymentCryptoWallet}}selected{{/if}}>Crypto Wallet</option>
                    <option value="credit-card" {{#if crypto.paymentCreditCard}}selected{{/if}}>Credit Card</option>
                    <option value="debit-card" {{#if crypto.paymentDebitCard}}selected{{/if}}>Debit Card</option>
                    <option value="paypal" {{#if crypto.paymentPaypal}}selected{{/if}}>PayPal</option>
                </select>
                <input type="submit" id="btn" value="EDIT"></input>
            </form>
        </div>
    </section>
</main>