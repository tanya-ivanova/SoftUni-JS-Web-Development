<main>
    <!-- In case of error, you should display div with class "errorContainer" -->
    <!-- You can choose to display the first error or all of them (error message/s in your opinion) -->
    {{#if errors}}
    <div>
        {{#each errors}}
        <div class="errorContainer">
            <p>{{this}}</p>
        </div>
        {{/each}}
    </div>
    {{/if}}

    <div class="register-box">
        <h1>Register</h1>
        <h4>It's free and only take a minute</h4>
        <form action="/auth/register" method="post">
            <label>Username</label>
            <input type="text" name="username" value="{{body.username}}" placeholder="Username..">
            <label>Email</label>
            <input type="text" name="email" value="{{body.email}}" placeholder="Email..">
            <label>Password</label>
            <input type="password" name="password" placeholder="Password..">
            <label>Confirm Password</label>
            <input type="password" name="repass" placeholder="Confirm Password..">
            <input type="submit" value="Submit">
        </form>
        <p>Already have an account? <a href="/auth/login">Login here</a></p>
    </div>
</main>