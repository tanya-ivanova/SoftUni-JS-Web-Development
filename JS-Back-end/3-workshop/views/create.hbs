<section>
    <h1>New Accommodation</h1>
    <main>
        <form class="aligned" action="/create" method="post">
            {{#if error}}
            <div class="error-box">
                {{#each error}}
                <p>{{this}}</p>
                {{/each}}
            </div>
            {{/if}}
            <label><span>Name</span><input type="text" name="name"></label>
            <label><span>City</span><input type="text" name="city"></label>
            <label><span>Beds</span><input type="number" name="beds"></label>
            <label><span>Price per night</span><input type="number" name="price"></label>
            <label><span>Image URL</span><input type="text" name="imgUrl"></label>
            <label><span>Description</span><textarea name="description"></textarea></label>
            <input type="submit" value="Publish Item">
        </form>
    </main>
</section>