<section>
  <div class="padded">
    <h1 class="item">Login</h1>
    <main class="item align-center">
      <form class="aligned" action="/auth/login" method="post">
        {{#if error}}
          <div class="error-box">
            {{#each error}}
              <p>{{this}}</p>
            {{/each}}
          </div>
        {{/if}}
        <div class="aligned">
          <label><span>Username</span><input
              type="text"
              name="username"
            /></label>
          <label><span>Password</span><input
              type="password"
              name="password"
            /></label>
          <input class="cta action" type="submit" value="Sign In" />
        </div>
      </form>
    </main>
    <footer>Don't have an account? <a href="/auth/register"">Sign up here</a></footer>
  </div>
</section>